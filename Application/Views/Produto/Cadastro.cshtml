@model DDD.Sales.Application.Models.ProdutoViewModel
@{
    ViewData["Title"] = "Produto - Cadastro";
    var disabled = Model.Codigo == null ? "disabled" : string.Empty;
}

<h2>@ViewData["Title"]</h2>
<hr />
<form asp-controller="Produto" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Codigo" value="@Model.Codigo"/>
    <div class="form-group">
        <div class="col-4">
            <label class="control-label">Descricao</label>
            <input type="text" asp-for="Descricao" value="@Model.Descricao" class="form-control" aria-label=""/>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label class="control-label">Quantidade</label>
            <input type="number" asp-for="Quantidade" value="@Model.Quantidade" class="form-control" aria-label=""/>
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label class="control-label">Valor</label>
            <input type="text" asp-for="Valor" value="@Model.Valor" class="form-control" aria-label=""/>
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label class="control-label">Categoria</label>
            <select asp-for="CodigoCategoria" class="form-control input-group-lg" asp-items="@Model.ListaCategorias"></select>
            <span asp-validation-for="CodigoCategoria" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="col">
        <button type="submit" class="btn btn-success">Gravar</button>
        <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Excluir", "Produto", new { id = Model.Codigo })'" @disabled>Excluir</button>
        <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Produto")'">Voltar</button>
    </div>
</form>