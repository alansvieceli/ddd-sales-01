@model DDD.Sales.Application.Models.ClienteViewModel
@{
    ViewData["Title"] = "Cliente - Cadastro";
    var disabled = Model.Codigo == null ? "disabled" : string.Empty;
}

<h2>@ViewData["Title"]</h2>
<hr />
<form asp-controller="Cliente" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Codigo" value="@Model.Codigo"/>
    <div class="form-group">
        <div class="col-4">
            <label class="control-label">Nome</label>
            <input type="text" asp-for="Nome" value="@Model.Nome" class="form-control" aria-label=""/>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label class="control-label">CNPJ/CPF</label>
            <input type="text" asp-for="CNPJ_CPF" value="@Model.CNPJ_CPF" class="form-control" aria-label=""/>
            <span asp-validation-for="CNPJ_CPF" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label class="control-label">Telefone</label>
            <input type="text" asp-for="Telefone" value="@Model.Telefone" class="form-control" aria-label=""/>
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label class="control-label">E-mail</label>
            <input type="text" asp-for="Email" value="@Model.Email" class="form-control" aria-label=""/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="col">
        <button type="submit" class="btn btn-success">Gravar</button>
        <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Excluir", "Cliente", new { id = Model.Codigo })'" @disabled>Excluir</button>
        <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Cliente")'">Voltar</button>
    </div>
</form>