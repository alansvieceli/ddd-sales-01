@model IEnumerable<DDD.Sales.Application.Models.CategoriaViewModel>;
@{
    ViewData["Title"] = "Categoria";
}

<h2>@ViewData["Title"] </h2>
<hr />
<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Cadastro", "Categoria")'">Inserir</button>
<hr />
<table class="table table-bordered">
    <thead>
    <tr style="background-color: #f6f6f6">
        <th>Código</th>
        <th>Descrição</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Codigo.ToString(), "Cadastro", "Categoria", new {id = item.Codigo})</td>
                <td>@Html.ActionLink(item.Descricao, "Cadastro", "Categoria", new {id = item.Codigo})</td>
            </tr>
        }
    </tbody>
</table>


